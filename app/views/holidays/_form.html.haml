= form_for [@setting, @holiday], :html => {:class => 'form-horizontal'} do |f|
  - if @holiday.errors.any?
    #error_explanation
      %ul
        - @holiday.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    .control-label
      = f.label :date
    .controls
      #holiday_date.input-append
        = f.text_field :date , {'data-format' => "yyyy-MM-dd" }
        %span.add-on
          <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
  .control-group
    .control-label
      = f.label :occasion
    .controls
      = f.text_field :occasion
  .control-group
    .controls
      = f.submit 'Save', :class => 'btn btn-danger'
