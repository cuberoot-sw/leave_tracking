= form_for [@setting, @holiday], :html => {:class => 'form-horizontal'} do |f|
  = render :partial => 'shared/error_messages', :locals => { :target => @holiday }
  .control-group
    .control-label
      = f.label :date
    .controls
      .holiday_input{:id => "#{@setting.year}"}
        = f.text_field :date, :id => 'holiday_date'
  .control-group
    .control-label
      = f.label :occasion
    .controls
      = f.text_field :occasion
  .control-group
    .controls
      = f.submit 'Save', :class => 'btn btn-danger'
