= form_for @setting, :html => {:class => 'form-horizontal'} do |f|
  - if @setting.errors.any?
    #error_explanation
      %ul
        - @setting.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    .control-label
      = f.label :year
    .controls
      = f.select :year, options_for_select((2000..2020).step(1), :selected => @setting.new_record? ? Date.today.strftime('%Y') : @setting.year )
  .control-group
    .control-label
      = f.label :total_leaves
    .controls
      = f.number_field :total_leaves
  .control-group
    .controls
      = f.submit 'Save', :class => 'btn btn-danger'
