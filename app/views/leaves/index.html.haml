.content-widgets.light-gray
  .widget-head.orange
    - title = (params[:status] || 'Pending').capitalize + ' Leaves'
    %h3= title
  %br
  .widget-container
    = link_to 'pending', leaves_path(status: 'pending'), :class => 'btn btn-orange'
    = link_to 'Approved', leaves_path(status: 'approved'), :class => 'btn btn-orange'
    = link_to 'Rejected', leaves_path(status: 'rejected'), :class => 'btn btn-orange'
    %br
    %br
    #data-table_wrapper.dataTables_wrapper.form-inline
      %table#data-table.table.table-bordered.dataTable
        %tr
          %th Applied By
          %th Start date
          %th End date
          %th Number Of Days
          %th Status
          %th Reason
          %th Rejection Reason
          %th{colspan: current_user.is_admin? ? 3 : 1} Action

        - @leaves.each do |leave|
          %tr
            %td= leave.user.name
            %td= leave.start_date
            %td= leave.end_date
            %td= leave.no_of_days
            %td= leave.status
            %td= leave.reason
            %td= leave.rejection_reason
            = render_links(leave)
%br
/ set up the modal to start hidden and fade in and out
#reject_reasonModal.modal.fade
  .modal-dialog
    .modal-content
      / dialog body
      .modal-body
        %button.close{"data-dismiss" => "modal", type: "button"} Ã—
        %label Rejection Reason:
        %input{type: 'hidden', id: 'leave_id'}
        %textarea{name: 'reason', id: 'rejection_reason'}
      / dialog buttons
      .modal-footer
        %button.btn.btn-primary.submit_reason{type: "button"} Submit
