= form_for [@user, @leave] do |f|
  - if @leave.errors.any?
    #error_explanation
      %ul
        - @leave.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    .control-label
      = f.label :start_date, 'Start Date'
    .controls
      = f.text_field :start_date, :id => 'leaves_start_date'
  .control-group
    .control-label
      = f.label :end_date, 'End Date'
    .controls
      = f.text_field :end_date, :id => 'leaves_end_date'
  .control-group
    .control-label
      = f.label :reason
    .controls
      = f.text_field :reason
  .control-group
    .controls
      = f.submit 'Save', :class => 'btn btn-danger'
