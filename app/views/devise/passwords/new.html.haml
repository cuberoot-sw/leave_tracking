.content-widgets.light-gray
  .widget-head.orange
    %h3 Forgot your password?
  .widget-container
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f|
      = devise_error_messages!
      .control-group
        = f.label :email, :class => 'control-label'
        .controls
          = f.email_field :email, autofocus: true
      .control-group
        .controls
          = f.submit "Send me reset password instructions", :class => 'btn btn-danger'
      .control-group
        .controls
          = render "devise/shared/links"
