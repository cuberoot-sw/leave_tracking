.content-widgets.light-gray
  .widget-head.orange
    %h3  Change your password
  .widget-container
    = form_for(resource, as: resource_name, url: password_path(resource_name), :html => { method: :put, class: 'form-horizontal' }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .control-group
        = f.label :password, 'New password', :class => 'control-label'
        .controls
          = f.password_field :password, autofocus: true, autocomplete: "off"
      .control-group
        = f.label :password_confirmation, "Confirm new password", :class => 'control-label'
        .controls
          = f.password_field :password_confirmation, autocomplete: "off"
      .control-group
        .controls
          = f.submit "Change my password", :class => 'btn btn-danger'
      .control-group
        .controls
          = render "devise/shared/links"

