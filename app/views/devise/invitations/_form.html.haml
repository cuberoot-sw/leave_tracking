%fieldset#stepy_form-step-0.step{title: "Step 1"}
  %legend{style: "display: none;"} description one
  .control-group
    %label.control-label Email
    .controls
      = f.email_field :email, :class => "error", :readonly => true
  .control-group
    %label.control-label Alternate Email
    .controls
      = f.email_field :alternate_email, :class => "error"
  .control-group
    %label.control-label Phone Number
    .controls
      = f.text_field :phone_number, :class => "error"
  .control-group
    %label.control-label Alternate Phone Number
    .controls
      = f.text_field :alternate_phone_number, :class => "error"
  .control-group
    %label.control-label Profile Picture
    .controls
      .row.profile_pic_div
        .span1{:id => 'profile_photo'}
          - if @user.profile_pic_url.present?
            = image_tag @user.profile_pic_url.to_s, :class => 'profile-pic'
            = link_to 'Remove', '#', :id => "remove_profile_pic_#{@user.id}", :class => 'remove-file-link'
        .span1
          = f.file_field :profile_pic
%fieldset#stepy_form-step-1.step{style: "display: none;", title: "Step 2"}
  %legend{style: "display: none;"} description Two
  .control-group
    %label.control-label Name
    .controls
      = f.text_field :name
  .control-group
    %label.control-label Local Address
    .controls
      = f.text_area :local_address
  .control-group
    %label.control-label  Permanent Address
    .controls
      %label.checkbox
        %input{:type => "checkbox", :id => 'same_local_address', :name => 'user[same_local_address]'}
        Same As Local Address
      = f.text_area :permanent_address
  .control-group
    %label.control-label Date of Birth
    .controls
      .input-append
        = f.text_field :date_of_birth, id: "date_of_birth"
  .control-group
    %label.control-label Date of Join
    .controls
      .input-append
        = f.text_field :date_of_joining, id: "date_of_join"
  - unless params[:edit_pass]
    .control-group
      %label.control-label Password
      .controls
        = f.password_field :password, autocomplete: "off"
    .control-group
      %label.control-label Confirm Password
      .controls
        = f.password_field :password_confirmation, autocomplete: "off"
  .control-group
    %label.control-label Blood Group
    .controls
      = f.select :blood_group, options_for_bloodgroup(@user)
  .control-group
    %label.control-label Skype ID
    .controls
      = f.text_field :skype_id
  .control-group
    %label.control-label Github ID
    .controls
      = f.text_field :github_id
%button.finish.btn.btn-extend{type: "submit"} Finish!
