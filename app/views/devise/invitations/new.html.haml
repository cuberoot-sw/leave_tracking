.content-widgets.light-gray
  .widget-head.orange
    %h3= t "devise.invitations.new.header"
  .widget-container
    = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :class => 'form-horizontal'} do |f|
      = devise_error_messages!
      %input{:type => 'hidden', :name => 'user[manager_id]', :value => 1}
      .control-group
        - resource.class.invite_key_fields.each do |field|
          = f.input field
      .control-group
        = f.submit t("devise.invitations.new.submit_button"), :class => 'btn btn-danger'
